{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "typeRoots": ["./node_modules/@types", "./app/types"],
    "baseUrl": ".",
    "paths": {
      "*": ["app/*"]
    }
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules", "dist"]
}